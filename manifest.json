{
  "manifest_version": 3,
  "name": "PerplexityRenderer",
  "version": "1.19.0",
  "description": "Render Markdown text from the clipboard in HTML and copy the rendered text to the clipboard",
  "permissions": [
    "clipboardRead",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}